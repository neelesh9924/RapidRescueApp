<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".viewIncident">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:elevation="2dp"
        android:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/backButtonBookPatientAppointment"
                style="@style/backButton"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView7asaa"
                style="@style/H6_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="View Incident"
                android:textColor="@color/red_300"
                app:layout_constraintBottom_toBottomOf="@+id/backButtonBookPatientAppointment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/backButtonBookPatientAppointment" />


        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewLayoutUserIncidents1231"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginHorizontal="@dimen/default_margin_start"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    android:layout_marginTop="@dimen/default_margin_top"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageViewLayoutUserIncidents"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:scaleType="fitXY"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/categoryTextLayoutUserIncidents"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:text="Category"
                            android:textAppearance="@style/H6_bold"
                            android:textColor="@color/textColorMedium"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageViewLayoutUserIncidents"
                            app:layout_constraintTop_toTopOf="@+id/imageViewLayoutUserIncidents" />

                        <ImageView
                            android:id="@+id/tempImageViewHorizontalDocProfileCheckOutPage"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/cell_tower_fill0_wght400_grad0_opsz24"
                            android:visibility="visible"
                            app:layout_constraintStart_toStartOf="@+id/categoryTextLayoutUserIncidents"
                            app:layout_constraintTop_toBottomOf="@+id/categoryTextLayoutUserIncidents"
                            app:tint="@color/red_300" />

                        <TextView
                            android:id="@+id/broadcastingOrNot"
                            style="@style/sub_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="10dp"

                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Broadcasting"
                            android:textColor="@color/red_300"
                            android:textSize="12sp"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="@id/tempImageViewHorizontalDocProfileCheckOutPage"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/tempImageViewHorizontalDocProfileCheckOutPage"
                            app:layout_constraintTop_toTopOf="@id/tempImageViewHorizontalDocProfileCheckOutPage" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView

                    android:id="@+id/cardView332"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/default_margin_start"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="4dp"
                    app:layout_constraintEnd_toEndOf="@+id/cardViewLayoutUserIncidents1231"
                    app:layout_constraintStart_toStartOf="@+id/cardViewLayoutUserIncidents1231"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewLayoutUserIncidents1231">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:text="Description"
                            android:layout_marginEnd="@dimen/default_margin_end"
                            android:textAppearance="@style/H6_bold"
                            android:textColor="@color/textColorMedium"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/descriptionText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/default_margin_end"
                            android:text="Description"
                            android:textAppearance="@style/sub_2"
                            android:textColor="@color/textColorMedium"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/textView3"
                            app:layout_constraintTop_toBottomOf="@+id/textView3" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/default_margin_start"
                    android:layout_marginTop="@dimen/default_margin_top"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/cardView332"
                    app:layout_constraintStart_toStartOf="@+id/cardView332"
                    app:layout_constraintTop_toBottomOf="@id/cardView332">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:id="@+id/textView312"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:text="Actions Taken"
                            android:textAppearance="@style/H6_bold"
                            android:textColor="@color/textColorMedium"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Incident Submitted"
                            android:textAppearance="@style/sub_2"
                            android:textColor="@color/textColorMedium"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>



    </com.google.android.material.appbar.AppBarLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>