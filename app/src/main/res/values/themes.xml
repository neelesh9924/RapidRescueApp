<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RapidRescueIRS" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_300</item>
        <item name="colorPrimaryVariant">@color/red_300</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_300</item>
        <item name="colorSecondaryVariant">@color/red_300</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="backButton" parent="transparentButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="iconTint">@color/red_300</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="icon">@drawable/ic_left_black_24dp</item>
        <item name="iconSize">30dp</item>

    </style>

    <style name="transparentButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textColor">@color/textColorMedium</item>
        <item name="android:textAppearance">@style/buttonText</item>
        <item name="shapeAppearanceOverlay">@style/squareIconButton_shape</item>
        <item name="rippleColor">@color/blue_200</item>
        <item name="elevation">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">0dp</item>
        <item name="iconTint">@color/blue_100</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">18dp</item>
        <item name="backgroundTint">@color/transparent</item>
    </style>

    <style name="squareIconButton_shape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">14dp</item>
    </style>

    <style name="Widget.App.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">

        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="hintTextColor">@color/textColorLight</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textColorHint">@color/textColorLight</item>

        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/blue_100</item>

        <item name="colorPrimary">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorError">@color/errorColor</item>
        <item name="textAppearanceSubtitle1">@style/sub_3</item>
        <item name="textAppearanceCaption">@style/caption</item>


        <item name="startIconTint">@color/blue_100</item>
        <item name="endIconTint">@color/blue_200</item>
    </style>


    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
        <item name="android:textColor">@color/textColorDark</item>
        <item name="strokeWidth">2dp</item>
        <item name="startIconTint">@color/blue_100</item>
        <item name="iconSize">26dp</item>


    </style>

    <style name="TextInputEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/textColorLight</item>
        <item name="android:textAppearance">@style/sub_3</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/blue_100</item>
        <item name="colorOnSurface">@color/textColorDark</item>
        <item name="colorError">@color/errorColor</item>
        <item name="textAppearanceSubtitle1">@style/sub_3</item>
        <item name="textAppearanceCaption">@style/caption</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox
        </item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ButtonFilled_primary" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/buttonText</item>
        <item name="shapeAppearanceOverlay">@style/roundedCorners</item>
        <item name="backgroundTint">@color/red_300</item>
        <item name="rippleColor">@color/blue_100</item>
        <item name="android:elevation">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:minHeight">60dp</item>

    </style>

    <style name="roundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>

    </style>

    <style name="textButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textColor">@color/blue_200</item>
        <item name="android:textAppearance">@style/buttonText</item>
        <item name="shapeAppearanceOverlay">@style/roundedCorners</item>
        <item name="rippleColor">@color/blue_100</item>
        <item name="elevation">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
    </style>


